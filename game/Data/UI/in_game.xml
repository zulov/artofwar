<element type="InGameMenuWindow" style="MyWindow">
	<attribute name="Vert Alignment" value="Top"/>
	<attribute name="Horiz Alignment" value="Right"/>
	<attribute name="Layout Mode" value="Vertical"/>
	<attribute name="Layout Spacing" value="{spaceY}"/>
	<attribute name="Layout Border" value="{spaceX} {spaceY} {spaceX} {spaceY}"/>
	<attribute name="Min Size" value="{iconX*4} {bigY/3}"/>
	<attribute name="Max Size" value="{iconX*5} {bigY/2}"/>
	<attribute name="Position" value="0 {iconY/2+2*spaceY}"/>
</element>

<element type="AdditionalInGameWindow" style="MyWindow">
	<attribute name="Vert Alignment" value="Center"/>
	<attribute name="Horiz Alignment" value="Center"/>
	<attribute name="Layout Spacing" value="{spaceX}"/>
	<attribute name="Layout Border" value="{iconX} {spaceY} {iconX} {spaceY}"/>
	<attribute name="Min Size" value="{resX/2} {resY/2}"/>
	<attribute name="Max Size" value="{bigX} {bigY}"/>
	<attribute name="Position" value="0 {-2*iconY}"/>
</element>

<element type="InGameToggledButton" style="Button" auto="false">
	<attribute name="Vert Alignment" value="Top"/>
	<attribute name="Horiz Alignment" value="Right"/>
	<attribute name="Min Size" value="{iconX} {iconY/2+2*spaceY}"/>
</element>

<element type="InGameToggledSprite">
	<attribute name="Vert Alignment" value="Center"/>
	<attribute name="Horiz Alignment" value="Center"/>
	<attribute name="My Size" value="{iconX-2*spaceX} {iconY/2+spaceY}"/>
	<attribute name="Percent HotSpot" value="0.5 0.5"/>
</element>

<element type="InGameSprite">
	<attribute name="Vert Alignment" value="Center"/>
	<attribute name="Horiz Alignment" value="Left"/>
	<attribute name="My Size" value="{iconX-2*spaceX} {iconY-2*spaceY}"/>
	<attribute name="Percent HotSpot" value="0.0 0.5"/>
	<attribute name="Position" value="{spaceX} 0"/>
</element>

<element type="InGameButton"  style="Button">
	<attribute name="Horiz Alignment" value="Center"/>
	<attribute name="Min Size" value="{iconX*4} {iconY}"/>
	<attribute name="Max Size" value="{iconX*4} {iconY}"/>
</element>

<element type="InGameText" style="MyText">
	<attribute name="Text Alignment" value="Right"/>
	<attribute name="Horiz Alignment" value="Center"/>
</element>

<element type="MiddleTitle" style="MyText">
	<attribute name="Font Size" value="{fontSize*1.5}"/>
	<attribute name="Vert Alignment" value="Top"/>
	<attribute name="Horiz Alignment" value="Center"/>
	<attribute name="Position" value="0 {iconY} "/>
</element>

<element type="MiddleMock">
	<attribute name="Vert Alignment" value="Top"/>
	<attribute name="Horiz Alignment" value="Center"/>
	<attribute name="Min Size" value="{100} {0}"/>
	<attribute name="Max Size" value="{1000} {1000}"/>
	<attribute name="Position" value="0 {iconY*3}"/>
	<attribute name="Layout Mode" value="Vertical"/>
	<attribute name="Layout Spacing" value="{spaceY}"/>
</element>

<element type="MyCloseButton" style="CloseButton">
	<attribute name="Horiz Alignment" value="Right"/>
	<attribute name="Vert Alignment" value="Top"/>
	<attribute name="Min Size" value="{iconX*0.75} {iconY*0.75}"/>
	<attribute name="Max Size" value="{iconX/2} {iconY/2}"/>
	<attribute name="Position" value="{-spaceX} {spaceY} "/>
</element>

<element type="FileNameLineEdit" style="LineEdit">
	<attribute name="Min Size" value="{iconX*4} {iconY/2}"/>
</element>

<element type="FileConfirmButton"  style="Button">
	<attribute name="Min Size" value="{iconX*2} {iconY}"/>
</element>

<element type="MiddleText" style="MyText">
	<attribute name="Horiz Alignment" value="Center"/>
	<attribute name="Vert Alignment" value="Center"/>
</element>
