<element type="TopWindow" style="MyWindow">
	<attribute name="Min Size" value="{resX/2} {iconY/2+2*spaceY}"/>
	<attribute name="Max Size" value="{resX/2} {iconY/2+2*spaceY}"/>
	<attribute name="Vert Alignment" value="Top"/>
	<attribute name="Horiz Alignment" value="Right"/>
	<attribute name="Layout Mode" value="Horizontal"/>
	<attribute name="Layout Spacing" value="{spaceX}"/>
	<attribute name="Layout Border" value="{spaceX} {spaceY} {spaceX} {spaceY}"/>
	<attribute name="Position" value="{-iconX} 0"/>
</element>

<element type="TopButtons" style="Button">
	<attribute name="Min Size" value="{iconX*2} {iconY/2}"/>
	<attribute name="Max Size" value="{iconX*2.5} {iconY/2}"/>
</element>
<element type="TopButtonsNarrow" style="Button">
	<attribute name="Min Size" value="{iconX*1.5} {iconY/2}"/>
	<attribute name="Max Size" value="{iconX*2} {iconY/2}"/>
</element>
<element type="TopButtonsWide" style="Button">
	<attribute name="Min Size" value="{iconX*2.5} {iconY/2}"/>
	<attribute name="Max Size" value="{iconX*3.5} {iconY/2}"/>
</element>

<element type="TopText" style="MyText">
	<attribute name="Font Size" value="{fontSize}"/>
</element>
<element type="TopTextSmall" style="MyText">
	<attribute name="Font Size" value="{fontSize-1}"/>
	<attribute name="Color" value="0.6 0.6 0.6"/>
</element>

<element type="mockCenter">
	<attribute name="Layout Spacing" value="{spaceX/2}"/>
	<attribute name="Layout Mode" value="Horizontal"/>
	<attribute name="Position" value="{-spaceX} 0"/>
	<attribute name="Horiz Alignment" value="Right"/>
	<attribute name="Min Size" value="0 {iconY/2}"/>
	<attribute name="Max Size" value="{iconX*5} {iconY/2}"/>
</element>

<element type="SpriteLeft" style="Sprite">
	<attribute name="Position" value="{spaceX} 0"/>
	<attribute name="Horiz Alignment" value="Left"/>
	<attribute name="My Size" value="{(iconX-spaceX)/2} {(iconY-spaceY)/2}"/>
	<attribute name="Percent HotSpot" value="0.0 0.5"/>
</element>

<element type="TopInfoPanel" style="MyWindow">
	<attribute name="Min Size" value="{3*iconX} {1*iconY+2*spaceY}"/>
	<attribute name="Max Size" value="{4*iconX+5*spaceX} {2*iconY+2*spaceY}"/>
	<attribute name="Vert Alignment" value="Top"/>
	<attribute name="Horiz Alignment" value="Right"/>
	<attribute name="Layout Mode" value="Vertical"/>
	<attribute name="Position" value="0 {iconY/2+2*spaceY}"/>
	<attribute name="Layout Border" value="{spaceX} {spaceY} {spaceX} {spaceY}"/>
</element>
