<element type="SelectedInfoWindow" style="MyWindow">
	<attribute name="Vert Alignment" value="Bottom" />
	<attribute name="Horiz Alignment" value="Center" />
	<attribute name="Layout Mode" value="Vertical" />
	<attribute name="Layout Spacing" value="{spaceY/3}" />
    <attribute name="Layout Border" value="{spaceX*2} {spaceY/3} {spaceX*2} {spaceY/3}" />
	<attribute name="Min Size" value="{resX -(4*iconX+4*spaceX) -(4*iconX+2*spaceX)} {3*iconY+5*spaceY}"/>
	<attribute name="Max Size" value="{resX -(4*iconX+4*spaceX) -(4*iconX+2*spaceX)} {3*iconY+5*spaceY}"/>
	<attribute name="Position" value="{spaceX} {0}"/>
</element>

<element type="MyListRow" style="ListRow" >
	<attribute name="Layout Spacing" value="{spaceX/4}" />
	<attribute name="Min Size" value="100 {iconY+spaceY}" />
	<attribute name="Max Size" value="10000 {iconY+spaceY}" />
</element>
